<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer_detail2_scrollView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <!-- title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/cust_detail2_address_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:src="@drawable/customer_detail_icon_1" />

        <TextView
            android:id="@+id/lb_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/cust_detail2_address_icon"
            android:singleLine="true"
            android:text="WinWay"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
     <!-- basic -->

    <RelativeLayout
        android:id="@+id/cust_r2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:background="@color/white"
            android:id="@+id/cust_detail_top_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/customer_detail_top_1" />

       <TableLayout
            android:id="@+id/cust_detail2_tb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cust_detail_top_icon"
            android:background="@drawable/customer_detail_body_1"
            android:divider="@drawable/customer_detail_line_1"
            android:showDividers="middle"
            android:stretchColumns="1"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:gravity="left|center_vertical"
               >
                <TextView
                    android:id="@+id/lb_address_id"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text="地址代號"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/ocd02"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="2"
                    android:layout_marginRight="2dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/lb_add1"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="地址一"
                    android:drawableRight="@drawable/customer_detail_map3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/ocd221"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="2"
                    android:layout_marginRight="2dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow>
              <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/lb_add2"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="地址二"
                    android:drawableRight="@drawable/customer_detail_map3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/ocd222"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:layout_weight="2"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow>
              <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/lb_contact"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="聯絡人"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/ocd228"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="2"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow>
              <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/lb_tel"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="TEL_NO"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/ocd224"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/lb_fax"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="FAX_NO"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/ocd226"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow> 
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/lb_postcode"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="郵遞區號"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/ocd04"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/lb_note"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="TEL_NO"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/note"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/lb_activie"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="是否停用"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/crimson" />

                <TextView
                    android:id="@+id/ta_ocdacti"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/cust_detail2_bottom_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cust_detail2_tb1"
            android:scaleType="fitXY"
            android:src="@drawable/customer_detail_bottom_1" />
    </RelativeLayout>
    <!-- area -->
     <View android:layout_width="match_parent"
           android:layout_height="30dp" />

    </LinearLayout>
</ScrollView>