<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
     tools:context="${packageName}.${activityClass}">    
     <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/sales_menu_bg2">
<RelativeLayout
        android:id="@+id/bomdata_top"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@color/transparent" 
         android:layout_marginBottom="90dip"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
         android:layout_below="@+id/bomdata_bottom"
        >
      <TableLayout 
            android:id="@+id/tb_parts"
            android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:divider="@color/lightgray"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:stretchColumns="*"
                    android:padding="5dip"
                    android:background="@color/lightgray"
                    
            >
            <TableRow   android:layout_width="wrap_content"
                        android:layout_height="wrap_content"    
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text="Part No : "				    
                            android:gravity="center_vertical|right"
                            android:background="@color/white"	
                            android:textColor="@color/black" 
                            android:layout_weight="1"    
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"                          
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                             />                     
               
                        <TextView
                            android:id="@+id/lb_partno"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text=""						
                            android:gravity="center_vertical|left"  
                            android:layout_weight="2"   
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"  
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                             />
                          
                    </TableRow>
            <TableRow                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text="Part Name : "				    
                            android:gravity="center_vertical|right"
                            android:background="@color/white"	
                            android:textColor="@color/black" 
                            android:layout_weight="1"    
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"                          
                            android:textAppearance="?android:attr/textAppearanceMedium"
                           android:ellipsize="end"
                             />                     
               
                        <EditText
                            android:id="@+id/lb_partname"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text=""						
                            android:gravity="center_vertical|left"  
                            android:layout_weight="2"   
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"  
                            android:textAppearance="?android:attr/textAppearanceMedium"
                           android:singleLine="true"
                             />
                          
                    </TableRow>
             <TableRow                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                             android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text="SPEC : "				    
                            android:gravity="center_vertical|right"
                            android:background="@color/white"	
                            android:textColor="@color/black" 
                            android:layout_weight="1"    
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"                          
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />                     
               
                        <EditText
                            android:id="@+id/lb_spec"
                             android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text=""						
                            android:gravity="center_vertical|left"  
                            android:layout_weight="2"   
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"  
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:singleLine="true"
                             />
                          
                    </TableRow>
              <TableRow                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                             android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text="Material : "				    
                             android:gravity="center_vertical|right"
                            android:background="@color/white"	
                            android:textColor="@color/black" 
                            android:layout_weight="1"    
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"                          
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />                     
               
                        <TextView
                            android:id="@+id/lb_material"
                             android:layout_width="0dp"
                            android:layout_height="36dp"
                           android:text=""						
                            android:gravity="center_vertical|left"  
                            android:layout_weight="2"   
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"  
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />
                          
                    </TableRow>
                      <TableRow                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                             android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text="Unit : "				    
                             android:gravity="center_vertical|right"
                            android:background="@color/white"	
                            android:textColor="@color/black" 
                            android:layout_weight="1"    
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"                          
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />                     
               
                        <TextView
                            android:id="@+id/lb_unit"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text=""						
                            android:gravity="center_vertical|left"  
                            android:layout_weight="2"   
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"  
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />
                          
                    </TableRow>
                      <TableRow                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text="Qty : "				    
                            android:gravity="center_vertical|right"
                            android:background="@color/white"	
                            android:textColor="@color/black" 
                            android:layout_weight="1"    
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"                          
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />                     
               
                        <TextView
                            android:id="@+id/lb_qty"
                             android:layout_width="0dp"
                            android:layout_height="36dp"
                           android:text=""						
                            android:gravity="center_vertical|left"  
                            android:layout_weight="2"   
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"  
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />
                          
                    </TableRow>
                      <TableRow                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text="In Stock : "				    
                            android:gravity="center_vertical|right"
                            android:background="@color/white"	
                            android:textColor="@color/black" 
                            android:layout_weight="1"    
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"                          
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />                     
               
                        <TextView
                            android:id="@+id/lb_instock"
                             android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:text=""						
                            android:gravity="center_vertical|left" 
                            android:layout_weight="2"   
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"   
                            android:layout_marginLeft="1dp"    
                            android:layout_marginTop="2dp"   
                            android:layout_marginBottom="1dp"  
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             />
                          
                    </TableRow>
                   
        </TableLayout>   
 
    
</RelativeLayout> 
<RelativeLayout
        android:id="@+id/bomdata_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent" >
         <TextView
                android:id="@+id/lb_parts_cancel"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text=""
               />
</RelativeLayout>
</RelativeLayout> 
</RelativeLayout>