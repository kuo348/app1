<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:padding="5dip"
     android:descendantFocusability="blocksDescendants"
    >

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/address_icon_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="0dip"      
        android:padding="0dp"  >
       
        <ImageView
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/apqp_icon"
            android:layout_width="48dip"
            android:layout_height="48dip"           
            android:src="@drawable/customerlist_icon_3" />
            
    
    </LinearLayout>

      <View
          android:id="@+id/address_items_view"
          android:layout_width="fill_parent"
          android:layout_height="56dp"
          android:layout_alignTop="@+id/address_icon_layout"
          android:layout_toRightOf="@+id/address_icon_layout" />

       <TextView
           android:id="@+id/address"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_alignLeft="@+id/address_items_view"
           android:layout_alignTop="@+id/address_items_view"
           android:layout_alignBottom="@+id/address_items_view"
           android:layout_alignRight="@+id/address_items_view"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="25dp"
           android:gravity="left|center_vertical"
           android:layout_centerVertical="true"
           android:singleLine="false"
           android:text="AP12345678"
           android:textColor="@color/black"
           android:textSize="15sp"
           android:textStyle="bold"
           android:typeface="sans" />      
        <View
          android:id="@+id/address_items_view2"
          android:layout_width="wrap_content"
          android:layout_height="2dp"
          android:background="@color/lightgray"
          android:layout_alignLeft="@+id/address"
          android:layout_alignBottom="@+id/address" 
          android:layout_alignRight="@+id/address"/>
       <ImageView
           android:id="@+id/icon2"
           android:layout_width="25dp"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_alignRight="@+id/address_items_view"
           android:contentDescription="@string/desc_list_item_icon"
           android:src="@drawable/group_arrow_right" />

</RelativeLayout>

