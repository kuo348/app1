<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/customer_detail_body_1"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/cust_detail2_r1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/actionbar_bg" >
<TextView
            android:id="@+id/cust_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本資料"
            android:layout_centerInParent="true"           
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
  <Button
                android:id="@+id/btn_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/group_arrow_left"
                android:gravity="left|center_vertical"
                android:text=""
                 android:layout_marginLeft="10dp"
                android:textColor="@color/white" />
</RelativeLayout>
  <TableLayout
            android:id="@+id/cust_detail2_tb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cust_detail_top_icon"
            android:background="@drawable/customer_detail_body_1"          
           android:stretchColumns="1"
            >
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:gravity="center_vertical"
               >
                <TextView
                    android:id="@+id/lb_contact"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:gravity="center"                   
                    android:text="Contact"
                    android:layout_weight="1"             
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue" />
                <TextView
                    android:id="@+id/lb_address"
                     android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"                  
                    android:background="@color/lightgray"
                    android:gravity="center"
                    android:text="Address"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
            </TableRow>          
  </TableLayout>
  <RelativeLayout  
       android:id="@+id/cust_detail2_r4"
       android:layout_width="match_parent"
        android:layout_height="wrap_content">     
        <com.winway.wwapp2.PullDownView
    android:id="@+id/contactlistview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp" >
</com.winway.wwapp2.PullDownView>
  </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/cust_detail2_r5" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:visibility="gone"
        >     
        <com.winway.wwapp2.PullDownView
    android:id="@+id/addresslistview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp" >
</com.winway.wwapp2.PullDownView>
  </RelativeLayout>
</LinearLayout>
