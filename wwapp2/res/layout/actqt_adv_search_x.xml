    <RelativeLayout android:id="@+id/r6"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_below="@+id/r4"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        >
        <TextView android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:id="@+id/project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:text="Project (Device) Name: "
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <EditText android:textColor="@color/black"
            android:id="@+id/xa058"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            android:layout_below="@+id/project"
            android:layout_alignLeft="@+id/project"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/r7"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_below="@+id/r6"
        android:layout_alignParentLeft="true">

        <TextView 
            android:id="@+id/sales_rep"
            android:textColor="@color/white"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:text="Sales Rep: "
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:textAppearance="?android:textAppearanceMedium"
            />
        
        <EditText 
            android:id="@+id/QT_SALES"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:drawableRight="@drawable/dropdown_icon"
            android:layout_alignBottom="@+id/sales_rep"
            android:layout_toRightOf="@+id/sales_rep"
            android:layout_toEndOf="@+id/sales_rep" />
        <!--            android:layout_alignLeft="@+id/sales_rep"-->

    </RelativeLayout>

    <RelativeLayout android:id="@+id/r8"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_below="@+id/r7"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/lb_DESCRIPTION"
            android:textColor="@color/white"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:text="Description: "
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/ed_DESCRIPTION"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:layout_alignBottom="@+id/lb_DESCRIPTION"
            android:layout_toRightOf="@+id/lb_DESCRIPTION"
            android:layout_toEndOf="@+id/lb_DESCRIPTION" />
        <!--            android:layout_alignLeft="@+id/sales_rep"-->

    </RelativeLayout>

    <Button android:textColor="@color/white"
        android:id="@+id/btnAdvSearch"
        android:background="@color/red"
        android:layout_width="150dp"
        android:layout_height="32.0dip"
        android:layout_marginBottom="14.0dip"
        android:text="Search"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSearchQtClick" />
</RelativeLayout>
