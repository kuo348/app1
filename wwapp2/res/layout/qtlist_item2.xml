<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >
    <!--android:padding="25dip"-->
    <!--android:background="@drawable/list_selector"-->

    <LinearLayout
        android:id="@+id/ln_01"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <!-- tb1 begin -->

        <!-- detail_tb1 -->
        <TableLayout
            android:id="@+id/detail_tb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:background="@color/transparent"
            >
            <!--android:layout_below="@+id/cust_detail_top_icon"-->

            <!-- QT_TYPE -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/lb_M1_QT_TYPE"
                    android:text="QT_TYPE"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />

                <EditText
                    android:id="@+id/ed_M1_QT_TYPE"
                    android:text="QT"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="3"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_column="2"

                    />

            </TableRow>

            <!-- QT_NO -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/lb_M1_QT_NO"
                    android:text="QT_NO"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />

                <EditText
                    android:id="@+id/ed_M1_QT_NO"
                    android:text="1234567890"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="3"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    />
                <!--android:layout_column="2"-->

            </TableRow>

            <!-- QT_SEQ -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                >

                <TextView
                    android:id="@+id/lb_M1_QT_SEQ_H"
                    android:text="Item#"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="20"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />

                <TextView
                    android:id="@+id/lb_M1_QT_SEQ_H_COMMA"
                    android:text=":"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center|center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />
                <EditText
                    android:id="@+id/ed_M1_QT_SEQ"
                    android:text="0001"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="75"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    />
                <!--android:layout_column="2"-->

                <TextView
                    android:id="@+id/tv_M1_QT_SEQ"
                    android:text="0001"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="75"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:drawableRight="@drawable/arraw_right"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"

                    />
                <!--android:layout_column="2"-->

            </TableRow>

            <!-- AP_TYPE -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/lb_AP_TYPE"
                    android:text="APQP_TYPE"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />

                <EditText
                    android:id="@+id/ed_AP_TYPE"
                    android:text="AP"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="3"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    />
                <!--android:layout_column="2"-->

            </TableRow>

            <!-- AP_NO -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/lb_AP_NO"
                    android:text="APQP_NO"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />

                <EditText
                    android:id="@+id/ed_AP_NO"
                    android:text="123456789"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="3"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    />
                <!--android:layout_column="2"-->


            </TableRow>

            <!-- APQP_NO=AP_TYPE+AP_NO -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                >

                <TextView
                    android:id="@+id/lb_APQP_NO_H"
                    android:text="APQP No"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="20"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />

                <TextView
                    android:id="@+id/lb_APQP_NO_H_COMMA"
                    android:text=":"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center|center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />

                <EditText
                    android:id="@+id/ed_APQP_NO"
                    android:text="123456789"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="75"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    />
                <!--android:layout_column="2"-->

                <TextView
                    android:id="@+id/tv_APQP_NO"
                    android:text="123456789"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="75"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    />
                <!--android:layout_column="2"-->
                <!--android:textColor="@color/black"-->

            </TableRow>

            <!-- DRAWING_REF -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                >

                <TextView
                    android:id="@+id/lb_DRAWING_REF_H"
                    android:text="Drawing Ref"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="20"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:id="@+id/lb_DRAWING_REF_H_COMMA"
                    android:text=":"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center|center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />
                <!--android:textSize="18sp"-->
                <!--android:layout_height="wrap_content"-->

                <EditText
                    android:id="@+id/ed_DRAWING_REF"
                    android:text="SA123456789"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="75"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_column="2"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/tv_DRAWING_REF"
                    android:text="SA123456789"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="75"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center_vertical"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    />
                <!--android:layout_column="2"-->


            </TableRow>

            <!-- DESCRIPTION -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                >
                <!--
                <TextView
                    android:id="@+id/lb_DESCRIPTION"
                    android:text="DESCRIPTION"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue"
                    android:background="@color/transparent"
                    />
                -->

                <!--注意: android:layout_weight 由 2 改成 3-->
                <EditText
                    android:id="@+id/ed_DESCRIPTION"
                    android:text="description here"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="0dp"
                    android:background="@color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_column="2"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/tv_DESCRIPTION"
                    android:text="description here"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/edit_border"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    />
                <!--android:layout_column="2"-->


            </TableRow>


        </TableLayout>

        <!-- tb1 End -->

    </LinearLayout>

