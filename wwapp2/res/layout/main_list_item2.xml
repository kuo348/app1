<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:padding="5dip"
     android:descendantFocusability="blocksDescendants"
    >

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/msg_ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="0dip"      
        android:padding="0dp"  >
       
        <ImageView
            android:id="@+id/msg_img2"
            android:layout_width="50dip"
            android:layout_height="50dip"           
            android:src="@drawable/ic_launcher" />
            
    
    </LinearLayout>


     
       <TextView
           android:id="@+id/msg_kind_text2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
   		   android:layout_alignTop="@+id/msg_title2"
           android:layout_alignRight="@+id/msg_ll2"
           android:layout_marginLeft="0dp"  
           android:layout_marginTop="36dp"         
           android:gravity="center_horizontal"
           android:text="Message"
           android:textColor="@color/black"
           android:textSize="10sp"
           android:width="50dp" />

      <View
          android:id="@+id/msg_bgview2"
          android:layout_width="fill_parent"
          android:layout_height="56dp"
          android:layout_alignTop="@+id/msg_ll2"
          android:layout_toRightOf="@+id/msg_ll2" />

       <TextView
           android:id="@+id/msg_title2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/msg_bgview2"
           android:layout_alignTop="@+id/msg_bgview2"
           android:layout_marginLeft="16dp"
           android:text="AP12345678"
           android:textColor="@color/black"
           android:textSize="15sp"
           android:textStyle="bold"
           android:typeface="sans" />

       <TextView
           android:id="@+id/msg_date2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/msg_title2"
           android:layout_alignBottom="@+id/msg_title2"
           android:layout_alignRight="@+id/msg_bgview2"
           android:layout_marginRight="40dp"
           android:gravity="right"
           android:text="20140708"
           android:textColor="@color/black"
           android:textSize="12sp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/msg_desc2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"           
           android:layout_alignLeft="@+id/msg_title2"
           android:layout_below="@+id/msg_date2"
           android:layout_alignParentRight="true"
           android:layout_alignBottom="@+id/msg_ll2"
           android:layout_marginRight="20dp"
           android:singleLine="true"
           android:gravity="bottom"
           android:text="0000 WinWay"
           android:textColor="@color/black"
           android:textSize="15sp" />

       <ImageView
           android:id="@+id/icon2"
           android:layout_width="25dp"
           android:layout_height="wrap_content"
           android:layout_alignRight="@+id/msg_bgview2"
           android:layout_below="@+id/msg_date2"
           android:contentDescription="@string/desc_list_item_icon"
           android:src="@drawable/group_arrow_right" />

</RelativeLayout>
