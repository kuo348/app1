<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    tools:context="${packageName}.${activityClass}" >
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/list_divider"
        android:orientation="vertical"
        android:showDividers="end" >
<RelativeLayout
            android:id="@+id/orderinfo_r1"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_alignParentTop="true"
            android:background="@drawable/actionbar_bg" >

            <TextView
                android:id="@+id/detail_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Order Info"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnReturnSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10.0dip"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/group_arrow_left"
                android:text="Sale"
                android:textColor="@color/white" />
        </RelativeLayout>   
    </LinearLayout>
     <RelativeLayout       
        android:id="@+id/wiplayout"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp" >

        <ImageView
            android:id="@+id/imgWIP"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"            
            android:src="@drawable/index_wip" />

        <TextView
            android:id="@+id/wip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="WIP"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </RelativeLayout>
</RelativeLayout>