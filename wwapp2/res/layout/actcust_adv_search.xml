<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black" >

    <RelativeLayout
        android:id="@+id/addapqp_bar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/actionbar_bg" >

        <Button
            android:id="@+id/btnReturnCustList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10.0dip"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/group_arrow_left"
            android:text="Customers"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/addapqp_bar"
        android:layout_marginTop="16.0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" >


        <TextView
            android:id="@+id/lb_occ04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="負責業務　:"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />
         <EditText
            android:id="@+id/occ04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@+id/lb_occ04"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:drawableRight="@drawable/dropdown_icon"
            android:editable="false"
            android:ems="12"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/r1" >

        <TextView
            android:id="@+id/lb_occ22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10.0dip"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="區　　域　:"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/occ22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@+id/lb_occ22"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:drawableRight="@drawable/dropdown_icon"
            android:editable="false"
            android:ems="14"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/r2" >

        <TextView
            android:id="@+id/lb_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10.0dip"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="聯  絡  人   :"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@+id/lb_contact"           
            android:layout_weight="1.0"
            android:background="@color/white"
            android:ems="12"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/r3" >

        <TextView
            android:id="@+id/lb_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10.0dip"
            android:gravity="left"
            android:text="電　　話　:"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@+id/lb_tel"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:ems="12"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r5"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/r4" >

        <TextView
            android:id="@+id/lb_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="left"
            android:text="客戶等級　:"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@+id/lb_level"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:drawableRight="@drawable/dropdown_icon"
            android:editable="false"
            android:ems="12"
            android:textColor="@color/black" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_cust_adv_search2"
        android:layout_width="150dp"
        android:layout_height="32.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14.0dip"
        android:background="@color/red"
        android:onClick="onSearchApqpClick"
        android:text="Search"
        android:textColor="@color/white" />

</RelativeLayout>